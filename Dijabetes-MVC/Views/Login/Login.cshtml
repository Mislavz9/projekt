@model Dijabetes_MVC.Models.Korisnik

@{
    ViewBag.Title = "Login";
}
<div class="row" style="text-align:center">
        <h1>SITAMET FITNESS</h1>
        <img src="~/Resources/images/fit.png" alt="img" class="fitness-img" />
        <hr style="width:40%;border-color:black;" />

    </div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationMessage("Error")

    <div class="form-horizontal" style="margin:0 auto;width:50%">
        <br/>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Log in" class="btn btn-warning"style="margin-right:10px;" />
                @Html.ActionLink("Registracija", "Registration")

            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script type='text/javascript'>
    window.onload = function () {
        document.getElementById("navbarHome").style.display = 'none';
    }
</script>
